  <glossary id="UUIDbc595a4e-ed6e-4b7b-7f86-5ae0063fc438">
    <definition id="fs-idp36374496">
      <term id="UUIDcec49ce1-87ef-4e3d-5f77-bf9d757ee866">wartość nominalna (ang. <foreign xml:lang="en" id="UUID392be3db-1f06-4f7e-640f-ace37625a652">nominal value</foreign>)</term>
      <meaning id="fs-idm53866768">
        <para id="UUID7b46a29d-c355-43ba-40d2-71aa42360a46">wartość wyrażona w cenach bieżących, czyli w cenach z okresu, dla którego jest liczona dana zmienna ekonomiczna; wartość nominalna nie jest skorygowana o inflację, jej przeciwieństwem jest wartość realna</para>
      </meaning>
    </definition>
    <definition id="fs-idp66313616">
      <term id="UUIDc586ce71-ed2f-4beb-6a37-c0128808162d">wartość realna (ang. <foreign xml:lang="en" id="UUID13fe0b36-e4e8-4122-6fc9-e00763772984">real value</foreign>)</term>
      <meaning id="fs-idp100316416">
        <para id="UUIDf3fa265d-d1fd-4698-5316-32a705c17fa1">wartość skorygowana o inflację, jej przeciwieństwem jest wartość nominalna</para>
      </meaning>
    </definition>
  </glossary>
